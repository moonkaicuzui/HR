{
  "google_drive": {
    "root_folder_id": "1PwmT0di7w2_iz-iA8Llza_h0oT4l4Q9D",
    "folder_structure": {
      "monthly_data": {
        "id": "1yFbEIjfpLgPKB7CQhTWyrdKLkn55NlXv",
        "naming_pattern": "{year}_{month:02d}"
      },
      "aql_history": {
        "id": "18yWygciJczt7fnEKjzGCAC21VVPWmlVi",
