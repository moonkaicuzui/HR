{
  "version": "1.0.0",
  "description": "Design tokens for HR Dashboard - Centralized design system configuration",
  "description_ko": "HR 대시보드용 디자인 토큰 - 중앙 집중식 디자인 시스템 설정",

  "colors": {
    "brand": {
      "primary": "#667eea",
      "primary_dark": "#4f46e5",
      "primary_light": "#818cf8",
      "secondary": "#764ba2",
      "accent": "#6366f1"
    },
    "gradients": {
      "primary": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
      "navbar": "linear-gradient(135deg, #1a1a2e 0%, #16213e 100%)",
      "success": "linear-gradient(135deg, #28a745 0%, #20c997 100%)",
      "danger": "linear-gradient(135deg, #ef4444 0%, #f87171 100%)",
      "warning": "linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%)",
      "info": "linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%)"
    },
    "status": {
      "success": "#10b981",
      "success_light": "#34d399",
      "danger": "#ef4444",
      "danger_light": "#f87171",
      "warning": "#f59e0b",
      "warning_light": "#fbbf24",
      "info": "#3b82f6",
      "info_light": "#60a5fa"
    },
    "neutral": {
      "white": "#ffffff",
      "background": "#f8f9fa",
      "background_alt": "#f1f5f9",
      "border": "#e2e8f0",
      "border_light": "#f1f5f9",
      "text_primary": "#0f172a",
      "text_secondary": "#64748b",
      "text_muted": "#94a3b8"
    },
    "chart": [
      "#FF6B6B", "#4ECDC4", "#45B7D1", "#96CEB4", "#FFEAA7",
      "#DDA0DD", "#98D8C8", "#F7DC6F", "#BB8FCE", "#85C1E2",
      "#FF9FF3", "#54A0FF", "#48DBFB", "#00D2D3", "#1ABC9C"
    ]
  },

  "shadows": {
    "none": "none",
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "card": "0 4px 6px rgba(0,0,0,0.07)",
    "card_hover": "0 8px 16px rgba(0,0,0,0.12)",
    "navbar": "0 2px 10px rgba(0,0,0,0.2)"
  },

  "spacing": {
    "0": "0",
    "1": "4px",
    "2": "8px",
    "3": "12px",
    "4": "16px",
    "5": "20px",
    "6": "24px",
    "8": "32px",
    "10": "40px",
    "12": "48px",
    "16": "64px"
  },

  "typography": {
    "font_family": {
      "sans": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
      "mono": "SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace"
    },
    "font_size": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "28px",
      "4xl": "32px"
    },
    "font_weight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "line_height": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },

  "borders": {
    "radius": {
      "none": "0",
      "sm": "4px",
      "base": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "full": "9999px"
    },
    "width": {
      "0": "0",
      "1": "1px",
      "2": "2px",
      "4": "4px"
    }
  },

  "transitions": {
    "duration": {
      "fast": "150ms",
      "base": "300ms",
      "slow": "500ms"
    },
    "timing": {
      "ease": "ease",
      "ease_in": "ease-in",
      "ease_out": "ease-out",
      "ease_in_out": "ease-in-out"
    }
  },

  "breakpoints": {
    "sm": "576px",
    "md": "768px",
    "lg": "992px",
    "xl": "1200px",
    "xxl": "1400px"
  },

  "z_index": {
    "dropdown": "1000",
    "sticky": "1020",
    "fixed": "1030",
    "modal_backdrop": "1040",
    "modal": "1050",
    "popover": "1060",
    "tooltip": "1070",
    "toast": "9999"
  },

  "components": {
    "card": {
      "padding": "25px",
      "border_radius": "12px",
      "margin_bottom": "20px"
    },
    "button": {
      "padding_sm": "6px 12px",
      "padding_base": "8px 16px",
      "padding_lg": "12px 24px",
      "border_radius": "8px"
    },
    "input": {
      "padding": "10px 16px",
      "border_radius": "8px",
      "border_width": "1px"
    },
    "modal": {
      "max_width": "900px",
      "backdrop_opacity": "0.5"
    },
    "table": {
      "row_height": "48px",
      "header_bg": "#f8f9fa",
      "stripe_bg": "#f8fafc"
    },
    "navbar": {
      "height": "56px",
      "padding": "12px 0"
    }
  },

  "animation": {
    "keyframes": {
      "bounce": {
        "0%, 100%": { "transform": "translateY(0)" },
        "50%": { "transform": "translateY(-5px)" }
      },
      "fadeIn": {
        "from": { "opacity": "0" },
        "to": { "opacity": "1" }
      },
      "slideUp": {
        "from": { "transform": "translateY(20px)", "opacity": "0" },
        "to": { "transform": "translateY(0)", "opacity": "1" }
      }
    }
  },

  "semantic": {
    "kpi_cards": {
      "total_employees": { "icon": "1", "color": "#667eea" },
      "data_errors": { "icon": "2", "color": "#ef4444" },
      "absence_rate": { "icon": "3", "color": "#f59e0b" },
      "resignation_rate": { "icon": "4", "color": "#ec4899" },
      "recent_hires": { "icon": "5", "color": "#10b981" },
      "recent_resignations": { "icon": "6", "color": "#f97316" },
      "under_60_days": { "icon": "7", "color": "#8b5cf6" },
      "post_assignment_resignations": { "icon": "8", "color": "#06b6d4" },
      "perfect_attendance": { "icon": "9", "color": "#22c55e" },
      "long_term_employees": { "icon": "10", "color": "#3b82f6" }
    },
    "status_colors": {
      "active": "#10b981",
      "resigned": "#f59e0b",
      "hired": "#3b82f6",
      "warning": "#ef4444"
    }
  }
}
